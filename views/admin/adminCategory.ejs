                                        <th>Sl No.</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Action</th>
                                        <th >Delete</th>
                                        </td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <!-- <td class="text-center">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" />
                                        </div>
                                    </td> -->

                                        <% count=1 %>
                                            <% category.forEach(function(category) { %>
                                                <td>
                                                    <%=count%>
                                                </td>
                                                <td><b>
                                                        <%= category.categoryName%>
                                                    </b></td>
                                                <td>
                                                    <%= category.categoryDescription%>
                                                </td>
                                                <!-- <td class="text-end">
                                                   <% if (category.list) { %>
                                                        <button type="button" class="btn btn-md font-sm btn-primary rounded me-2 statusButton"
                                                            data-cat_id="<%=category._id%>">UnList</button>
                                                        <% } else { %>
                                                            <button type="button" class="btn btn-sd font-sm btn-light me-2 statusButton"
                                                                data-cat_id="<%=category._id%>">List</button>
                                                            <% } %> 
                                                            </td> -->
                                                            <td>
                                                                <% if(category.status===true){ %>
                                                                    
                                                                    <button style="color: #0a5b19; border: none; background-color: rgb(189, 239, 189); border-radius: 10px;" onclick="handleStatus('<%= category._id %>',false)" >Active</button>
                                                                    <% } else {%>
                                                                        <button style="color: #5b1a0a; border: none; background-color: rgb(239, 204, 189); border-radius: 10px;" onclick="handleStatus('<%= category._id %>',true)" >Unlist</button>
                                                                        <% } %>
                                                            </td>
                                                            <td>
                                                                <a href="/admin/deletecategory?id=<%=category._id %>"
                                                                    class="btn btn-md font-sm btn-primary rounded">
                                                                    <i class="material-icons md-delete_forever"></i>
                                                                    Delete
                                                              </a>
                                                              </td>
                                                              </div>
                                                                    </div> <!-- dropdown //end -->
                                               
                                                </tr>
                                                <% count++ %>
                                                    <% }); %>
                            
                            
                            </tbody>
                            </table>
                </div>
            </div> <!-- .col// -->
        </div> <!-- .row // -->
        </div> <!-- card body .// -->
        </div> <!-- card .// -->
    </section> <!-- content-main end// -->



