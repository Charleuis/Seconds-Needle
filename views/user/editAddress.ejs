<%- include ('../partials/header') -%>
	<main class="main">
		<div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
			<div class="container">
				<h1 class="page-title">Edit Your<span>Edit Your</span></h1>
			</div><!-- End .container -->
		</div><!-- End .page-header -->
		<nav aria-label="breadcrumb" class="breadcrumb-nav mb-3">
			<div class="container">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="/">Home</a></li>
					<li class="breadcrumb-item"><a href="/userdash">Profile</a></li>
					<li class="breadcrumb-item active" aria-current="page">My Account</li>
				</ol>
			</div><!-- End .container -->
		</nav><!-- End .breadcrumb-nav -->
		<div class="row">
			<div class="col-sm-3"></div>
			<div class="col-sm-8">
				<form action="/updateAddress" method="post">
					<div class="row">
						<input type="hidden" name="id" value="<%=useraddress._id%>">                         
						<div class="col-lg-9">
							<!--<h2 class="checkout-title">Add Address</h2> End .checkout-title -->
							<div class="row">
								<div class="col-sm-12">
									<label>Full Name *</label>
									<input type="text" class="form-control" name="name" value="<%=useraddress.name%>" required>
								</div><!-- End .col-sm-6 -->
							</div><!-- End .row -->

							<label>Address*</label>
							<input type="text" class="form-control" name="address" value="<%=useraddress.address%>">

							<div class="row">
								<div class="col-sm-6">
									<label>City*</label>
									<input type="text" class="form-control" name="city" value="<%=useraddress.city%>" required>
								</div><!-- End .col-sm-6 -->

								<div class="col-sm-6">
									<label>State*</label>
									<input type="text" class="form-control" name="state" value="<%=useraddress.State%>" required>
								</div><!-- End .col-sm-6 -->
							</div><!-- End .row -->



							<div class="row">
								<div class="col-sm-6">
									<label>Pincode*</label>
									<input type="text" class="form-control" name="pincode" value="<%=useraddress.Pincode%>" required>
								</div><!-- End .col-sm-6 -->

								<div class="col-sm-6">
									<label>Phone Number *</label>
									<input type="tel" class="form-control" name="phonenumber" value="<%=useraddress.phone%>" required>
								</div><!-- End .col-sm-6 -->
							</div><!-- End .row -->

							<label>Landmark *</label>
							<input type="text" class="form-control" name="landmark" value="<%=useraddress.landmark%>" required>

							<input type="submit" class="btn btn-outline-primary-2 mb-3" value="Update">
						</div><!-- End .col-lg-9 -->
					</div><!-- End .row -->
				</form>
			</div>
		</div>
	</main>
<%- include ('../partials/footer') -%>